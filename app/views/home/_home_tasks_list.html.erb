<%if !@tasks.blank?%>
	<table class="table table-bordered table-striped table-condensed cf">
		<thead class="cf">
		  <tr style="width:100%;">
			<th>Project Name</th>
			<th>Task Id</th>
			<th>Assigned for</th>
			<th>Task Name</th>
			<th>Task Description</th>
			<th>Time Taken(in hours)</th>
			<th>Date</th>
		  </tr>
		</thead>
	    <tbody>
	        <%@tasks.each_with_index do |task| %>
	        <tr>
	        	<td>
	        	  <%=task.find_proj_name(task.project_id) if !task.project_id.blank?%>	
				</td>
				<td>
				  <%=task.id%>
				</td>
				<td>
				  <%=current_user.email%>
				</td>
				<td>
				  <%=task.name%>
				</td>
				<td>
					<%=task.description%>
				</td>
				<td>
				   <%=task.time_taken%>
				</td>
				<td>
				   <%=task.date.strftime("%m-%d-%Y") if task.date%>
				</td>	
	        </tr>
	        <%end %>
	    </tbody>
	</table>
<%else%>
	<div class="noRecords"><span class="fa fa-info-circle"></span> No Tasks Found</div>
<%end%>	